<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ================================= Buttons ================================= -->
    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="button_primary" parent="@style/button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/primary_red</item>
    </style>

    <style name="button_secondary" parent="@style/button">
        <item name="android:textColor">@color/primary_red</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="strokeColor">@color/primary_red</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="button_camera_icon" parent="@style/button">
        <item name="icon">@android:drawable/ic_menu_camera</item>
        <item name="android:layout_width">@dimen/button_height</item>
        <item name="android:backgroundTint">@color/grey_1</item>
        <item name="android:padding">0dp</item>
        <item name="android:inset">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>
    <!-- ================================== Logo ================================== -->
    <style name="splash_logo" >
        <item name="android:layout_width">128dp</item>
        <item name="android:layout_height">128dp</item>
        <item name="srcCompat">@drawable/ico_intro</item>
    </style>

    <!-- ================================== Text ================================== -->
    <style name="text" >
        <item name="android:textColor">@color/black</item>
        <!-- TODO: Change the font family to Roboto -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="heading_1" parent="@style/text">
        <item name="android:textSize">@dimen/heading_1_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="heading_2" parent="@style/text">
        <item name="android:textSize">@dimen/heading_2_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="body" parent="@style/text">
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="subtitle_1" parent="@style/text">
        <item name="android:textSize">@dimen/subtitle_1_text_size</item>
        <item name="android:textColor">@color/grey_1</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- ============================= Text Field ================================== -->
    <style name="text_field" >
        <item name="android:paddingStart">12dp</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/input_custom</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <!-- =========================== Progress Bar ================================ -->
    <style name="progress_bar">
        <item name="colorAccent">@color/primary_red</item>
    </style>
</resources>